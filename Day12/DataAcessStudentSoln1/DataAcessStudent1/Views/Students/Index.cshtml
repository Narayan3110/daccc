@using DataAcessStudent1.Models.Abstract
@model IEnumerable<Stu>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<a href="Students/Addstu">Add </a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Class</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr><td>@item.Id</td><td>@item.Name</td><td>@item.Class</td><td>@Html.ActionLink("X", "Del", new { id = item.Id }) </td> <td><button>@Html.ActionLink("UPDATE", "Modify", new { id = item.Id }) </button></td> </tr>
            }
    </tbody>
</table>
<style>
    body {
        background-color: #f0f8ff; /* Light blue background */
        font-family: 'Arial', sans-serif;
    }

    h2 {
        color: #4a4a4a; /* Dark grey */
        margin-bottom: 20px;
    }

    .table {
        margin: 20px auto;
        width: 80%;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .thead-primary {
        background-color: #007bff; /* Bright blue header */
        color: white;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #e9f7fa; /* Light teal for even rows */
    }

    tr:nth-child(odd) {
        background-color: #ffffff; /* White for odd rows */
    }

    tr:hover {
        background-color: #d1ecf1; /* Light cyan on hover */
    }
</style>